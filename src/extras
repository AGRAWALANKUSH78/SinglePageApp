<template>
  <div class="container">
  <form>
    <div >
        <input type="text" v-model="name" placeholder="Name" />  
        <input type="text" v-model="age" placeholder="Age" />      
        <input type="text" v-model="email" placeholder="Email-Id" />      
        <button @click.prevent="addEmployees">Add</button>
        <p v-model="warning"> {{ warning }} </p>
    </div>
  </form>

<table v-if="employees.length > 0" >
  <tr>
    <th>Index</th>
    <th>employees</th>
    <th>Age</th>
    <th>Email-Id</th>
    <th>Action</th>
  </tr>
  <tr v-for="(employee, index) in employees">
    <td>{{ index }}</td>
    <td>{{ employee.name }}</td>
    <td>{{ employee.age }}</td>
    <td>{{ employee.email }}</td>
    <button @click.prevent="editEmployeeDetails(index)" >Edit</button>
    <button @click.prevent="deleteEmployeeDetails(index)" >Delete</button>
  </tr>
</table>

</div>
</template>

<script>
export default {
  data(){
    return {
      name: '',
      age: '',
      email: '',
      warning: '',
      employees: []
    }
  },
  methods: {
    addEmployees: function(){
      if(!(/^\s*$/).test(this.name)){
          if(this.name != '' && this.age != '' && this.email != ''){
            this.age
            this.employees.push({name : this.name, age : this.age,  email : this.email});
            this.name = '';
            this.age = '';
            this.email = '';
            this.warning = '';
          } else {
            this.warning = "all fields are required"
          }        
      } else {
        this.warning = "Fill your Name"
      }
    },
    deleteEmployeeDetails(index){
      var deleteEntry = confirm("Delete Entry");
      if(deleteEntry){
        this.employees.splice(index, 1);
      };      
    },
    editEmployeeDetails : function(index){
      this.name = this.employees[index].name;
      this.age = this.employees[index].age;
      this.email = this.employees[index].email;
      this.employees.splice(index, 1);
      console.log("write a code for editing");
    }
  }
}
</script>





*******************************

<template>
    <table v-if="employees.length > 0" >
      <tr>
        <th>Index</th>
        <th>employees</th>
        <th>Age</th>
        <th>Email-Id</th>
        <th>Action</th>
      </tr>
      <tr v-for="(employee, index) in employees">
        <td>{{ index }}</td>
        <td>{{ employee.name }}</td>
        <td>{{ employee.age }}</td>
        <td>{{ employee.email }}</td>
        <button @click.prevent="editEmployeeDetails(index)" >Edit</button>
        <button @click.prevent="deleteEmployeeDetails(index)" >Delete</button>
      </tr>
    </table>
</template>


<script >

  export default {
    name : 'table',
    data () {
      return {
        employees : [] 
      }
    },
   created () {
    this.users = this.$store.state.users;
   },
    methods : {
      

      removeData (index) {
        let result = confirm("Are you sure You want to delete your data");
        if(result) {
          this.$store.dispatch('remove', {
            index: index
          });
        }
      },
      
      
    }
  }
</script>


----------------------------------------------------



<template>
  <div>
    <form>
      <div>
        <div> 
          <input name="name" type="text" v-model="name" placeholder="Name" v-validate="'required'"/>
          <p v-show="errors.has('name')"> {{ errors.first('name') }}</p>  
        </div><br>
        <div>
          <input name="age" type="text" v-model="age" placeholder="Age" v-validate="'required|min_value:0'"/> 
          <p v-show="errors.has('age')"> {{ errors.first('age') }}</p>            
        </div><br>
        <div>
          <input name="email" type="text" v-model="email" placeholder="Email-Id" v-validate="'required|email'"/> 
          <p v-show="errors.has('email')"> {{ errors.first('email') }}</p>            
        </div><br>

        <router-link to="/" >
          <button @click="addEmployees"> Add </button>
        </router-link>

      </div>
    </form>
  </div>
</template>


<script>
export default {
  name : 'registration',
  data(){
    return {
      name: '',
      age: '',
      email: '',
      employees : []
    }
  },
  methods: {
    addEmployees : function(){
      alert("all fields required");
      this.employees.push({ name : this.name, age : this.age,  email : this.email });
      console.log(this.employees);
    }
  }
}
</script>
